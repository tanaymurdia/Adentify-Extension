{
  "manifest_version": 3,
  "name": "Screen Recorder Replica",
  "version": "0.1.0",
  "description": "Replicates Screenity's screen capture with overlay.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabCapture",
    "tabs",
    "downloads"
  ],
  "optional_permissions": [
    "desktopCapture",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_icon": {
      "128": "icon128.png"
    },
    "default_title": "Start Recording"
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.bundle.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "offscreen.html",
        "offscreen.bundle.js",
        "launcher.html",
        "launcher.bundle.js",
        "overlay.js",
        "overlay.css",
        "icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
} 